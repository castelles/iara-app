<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="castelles.com.github.iaraapp.viewmodel.UserViewModel" />

        <variable
            name="viewModel"
            type="UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3C83AF"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp">

            <TextView
                style="@style/IaraTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olá, Parece um ótimo dia\npara uma cachoeira."
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/IaraTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32°C"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/imv_weather"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/imv_weather"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cloud_sunny_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txv_most_visited"
            style="@style/IaraTextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/most_visited"
            app:layout_constraintTop_toBottomOf="@id/ctl_header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/txv_most_visited"
            tools:itemCount="1"
            tools:listitem="@layout/item_place" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rcv_home">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                tools:listitem="@layout/item_category_home" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
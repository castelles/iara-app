<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <include
            android:id="@+id/incld_action_bar"
            layout="@layout/action_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/incld_action_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/incld_mosaic"
                    layout="@layout/image_place_mosaic"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txv_place_title"
                    style="@style/IaraTextView.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Cachoeira da Pedra Furada"
                    app:layout_constraintTop_toBottomOf="@id/incld_mosaic" />

                <TextView
                    android:id="@+id/txv_address"
                    style="@style/IaraTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:text="AM-240 Km 60 - Sol Nascente, Pres. Figueiredo - AM, 69735-000"
                    app:layout_constraintTop_toBottomOf="@id/txv_place_title" />

                <TextView
                    android:id="@+id/txv_know_more"
                    style="@style/IaraTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:paddingBottom="8dp"
                    android:text="Contato: (92) 99999-9999"
                    android:textAlignment="viewEnd"
                    app:layout_constraintTop_toBottomOf="@id/txv_address" />

                <TextView
                    android:id="@+id/txv_description"
                    style="@style/IaraTextView.Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/str_lorem_ipsum"
                    app:layout_constraintTop_toBottomOf="@id/txv_know_more"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdv_map"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/transparent_round_corner"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/txv_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="16dp">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imv_info"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_info"
                    app:layout_constraintEnd_toEndOf="@id/cdv_map"
                    app:layout_constraintTop_toTopOf="@id/cdv_map"
                    app:tint="@color/carolina_blue" />

                <TextView
                    android:id="@+id/txv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:background="@drawable/background_tooltip"
                    android:padding="8dp"
                    android:text="Clique no pin em destaque para opções de encontrar rotas ou abrir no google maps."
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/imv_info"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>